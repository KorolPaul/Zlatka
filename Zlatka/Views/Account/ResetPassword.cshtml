@model Zlatka.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form form__center", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2>Reset your password.</h2>
    @Html.ValidationSummary("", new { @class = "form_error" })
    @Html.HiddenFor(model => model.Code)
    <div class="form_group">
        @Html.LabelFor(m => m.Email, new { @class = "form_label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form_input" })
    </div>
    <div class="form_group">
        @Html.LabelFor(m => m.Password, new { @class = "form_label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form_input" })
    </div>
    <div class="form_group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form_label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form_input" })
    </div>
    <div class="form_group">
        <input type="submit" class="btn btn-default" value="Reset" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
