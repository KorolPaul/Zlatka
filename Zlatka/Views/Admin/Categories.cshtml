@model IEnumerable<Zlatka.Models.Category>

@{
    ViewBag.Title = "Категории";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Категории</h2>
<p>
    @Html.ActionLink("Добавить", "AddCategory")
</p>
<table class="table-list">
@foreach (var item in Model) {
    <colgroup>
        <col width="95%" />
        <col width="5%" />
    </colgroup>
    <tr>
        <td>
            @Html.ActionLink(item.Title, "EditCategory", new { id = item.id })
        </td>
        <td>
            @Html.ActionLink("✕", "DeleteArticle", new { id = item.id }, new { @class = "delete js-delete", id = item.id, @data_action = "DeleteCategory" })
        </td>
    </tr>
}
</table>
