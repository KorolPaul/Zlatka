@model Zlatka.Models.Article

@{
    ViewBag.Title = "AddArticle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Добавление статьи</h2>

@using (Html.BeginForm("EditArticle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "form_error" })
        <div class="form_group">
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "form_error" })
        </div>
        <div class="form_group">
            @Html.LabelFor(model => model.Date)
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { Value = @DateTime.Now.ToString(), placeholder = @DateTime.Now.ToString() } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "form_error" })
        </div>
        <div class="form_group">
            @Html.LabelFor(model => model.Url)
            @Html.EditorFor(model => model.Url)
        </div>
        <div class="form_group">
            @Html.LabelFor(model => model.Image)
            <img src="../../content/images/@Model.Image" alt="old image" />
            <input type="hidden" value="@Model.Image" id="oldImage" name="oldImage" />
            <input type="file" id="Image" name="Image" />
        </div>
        <div class="form_group">
            @Html.LabelFor(model => model.CategoryID)
            @Html.DropDownList("CategoryID", ViewBag.Categories as IEnumerable<SelectListItem>)
        </div>
        <div class="form_group">
            @Html.LabelFor(model => model.Annotation)
            @Html.TextAreaFor(model => model.Annotation)
        </div>
        <div class="form_group">
            @Html.LabelFor(model => model.Content)
            @Html.TextAreaFor(model => model.Content, new { @class = "js-textarea" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "form_error" })
        </div>
        <div class="form_group">
                <input type="submit" value="Сохранить" />
        </div>
    </div>
}
