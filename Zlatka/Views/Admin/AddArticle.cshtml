@model Zlatka.Models.Article

@{
    ViewBag.Title = "AddArticle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Добавление статьи</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "form_error" })
        <div class="form_group">
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "form_error" })
        </div>

        <div class="form_group">
            @Html.LabelFor(model => model.Date)
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { Value = @DateTime.Now.ToString(), placeholder = @DateTime.Now.ToString() } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "form_error" })
        </div>

        <div class="form_group">
            @Html.LabelFor(model => model.Content)
            @Html.TextAreaFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "form_error" })
        </div>

        <div class="form_group">
                <input type="submit" value="Create" />
        </div>
    </div>
}
